<h1>List Contact</h1>
 
<table class="table">
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Address</th>
    <th colspan="3">Action</th>
  </tr>
 
  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.phone_number %></td>
      <td><%= contact.addr %></td>
      <td><%= link_to contact_path(contact), class: 'btn btn-primary' do %>
          <i class="glyphicon glyphicon-user"></i> Show
          <% end %>
      </td>
      <td><%= link_to edit_contact_path(contact), class: 'btn btn-primary' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
      </td>
      <td><%= link_to contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' do %>
            <i class="glyphicon glyphicon-trash"></i> Destroy
          <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to new_contact_path, class: 'btn btn-primary', class: 'btn btn-primary' do %>
            <i class="glyphicon glyphicon-plus"></i> New Contact
          <% end %>
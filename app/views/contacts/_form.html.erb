<%= form_for @contact do |f| %>

<% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@contact.errors.count, "error") %> prohibited
        this contact from being saved:
      </h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if can? :manage, :all %>
  <p>
    <%= f.label :"Username" %><br>
    <%= f.collection_select(:user_id, @users, :id, :username, :include_blank => "Select Username") %>
  </p>
  <% end %>
  
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :"Phone number" %><br>
    <%= f.text_field :phone_number %>
  </p>
 

  <p>
    <%= f.label :Address %><br>
    <%= f.text_area :addr %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>